<%= form_for(option_set, url: option_sets_path, method: :post, remote: true, html: { class: 'option_set_form' }) do |f| %>
  <div class="option-set panel panel-default">
    <div class="options panel-body">
      <div class="option">
        <label class="control-label">
          Vi-compatibility
        </label>
        <a href="http://vimdoc.sourceforge.net/htmldoc/options.html#'compatible'" class="doc-link" target="_blank">
          see documentation
        </a>
        <span class="help-block">
          Adds backwards-compatibility with the Vi editor by turning off many Vim features
        </span>
        <div class="choices">
          <div class="radio">
            <%= f.label :compatible, value: true do %>
              <%= f.radio_button :compatible, true %>
              On
            <% end %>
            <div class="radio">
              <%= f.label :compatible, value: false do %>
                <%= f.radio_button :compatible, false, checked: true %>
                Off (recommended)
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="option">
        <label class="control-label">
          Leader key
        </label>
        <a href="http://vimdoc.sourceforge.net/htmldoc/map.html#mapleader" class="doc-link" target="_blank">
          see documentation
        </a>
        <span class="help-block">
          Sets a prefix that can be referred to in other mappings as &lt;Leader&gt;
        </span>
        <div class="choices form-group leader">
          <%= f.text_field :leader, value: ' ', class: 'form-control', maxlength: 1, data: { action: 'select_contents' } %>
        </div>
      </div>
      <div class="submit">
        <button type="submit" class="btn btn-default">
          <%= icon('cog') %> Generate
        </button>
      </div>
    </div>
    <div class="output-container">
      <% if option_set.persisted? %>
        <%= render 'output', option_set: option_set %>
      <% end %>
    </div>
  </div>
<% end %>
